<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.concordiaforstudents.moodleFragments.GradesFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="GRADES"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@color/burgundy"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="95dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grade Item"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/burgundy"
            />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Grade"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/burgundy"
            />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Range"
                android:textSize="20dp"
                android:textColor="@color/white"
                android:background="@color/burgundy"/>
            />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mini Project"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="83"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project Proposal Submission"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="80"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Project Research and Observations"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Final Project Report"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Midterm"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Course Total"
                android:textColor="@color/black"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="75"
                android:textSize="20dp"
                />
            <TextView
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="0-100"
                android:textSize="20dp"
                />
        </TableRow>
    </TableLayout>

</FrameLayout>