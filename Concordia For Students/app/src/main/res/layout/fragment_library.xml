<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.concordiaforstudents.campusFragments.LibraryFragment">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:gravity="center"
        android:text="LIBRARY"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:background="@color/burgundy"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Library Occupancy"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="290dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/randomNumberTextView1"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_library_background"
        android:text="Webster\n924"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="70dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/randomNumberTextView2"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_library_background2"
        android:text="Vanier\n612"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-80dp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/randomNumberTextView3"
        android:layout_width="250dp"
        android:layout_height="125dp"
        android:background="@drawable/rounded_library_background3"
        android:text="Grey Nuns\n177"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-230dp"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/lastUpdatedText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Last updated: 15:00"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="20dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/randomizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="200dp"
        android:layout_marginRight="-135dp"
        android:text="Refresh"
        android:background="@color/burgundy"
        android:textColor="@color/white">
    </androidx.appcompat.widget.AppCompatButton>

</FrameLayout>