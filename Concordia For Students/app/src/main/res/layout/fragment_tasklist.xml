<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/task_list_title"
            android:layout_width="360dp"
            android:layout_height="51dp"
            android:background="@color/burgundy"
            android:gravity="center"
            android:text="TASK LIST"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="16dp"
            android:alpha="255"
            android:background="@color/burgundy"
            app:srcCompat="@android:drawable/ic_menu_add" />

    </LinearLayout>

    <TextView
        android:id="@+id/list1_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A9A9A9"
        android:text="Due Today"
        android:textColor="#455A64"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Colored View -->
            <View
                android:id="@+id/side_color1"
                android:layout_width="13dp"
                android:layout_height="65dp" />

            <View
                android:id="@+id/side_color2"
                android:layout_width="13dp"
                android:layout_height="65dp" />

            <View
                android:id="@+id/side_color3"
                android:layout_width="13dp"
                android:layout_height="65dp" />

        </LinearLayout>


        <!-- Task List 1 -->
        <ListView
            android:id="@+id/task_list1"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:textSize="24dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/list2_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A9A9A9"
        android:text="Due Tomorrow"
        android:textColor="#455A64"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Colored View -->
            <View
                android:id="@+id/side_color1_list2"
                android:layout_width="13dp"
                android:layout_height="65dp" />


            <View
                android:id="@+id/side_color2_list2"
                android:layout_width="13dp"
                android:layout_height="65dp" />

        </LinearLayout>


        <!-- Task List 2 -->
        <ListView
            android:id="@+id/task_list2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:textSize="24dp" />

    </LinearLayout>


    <TextView
        android:id="@+id/list3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A9A9A9"
        android:text="Due Friday"
        android:textColor="#455A64"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Colored View -->
            <View
                android:id="@+id/side_color1_list3"
                android:layout_width="13dp"
                android:layout_height="65dp" />


        </LinearLayout>


        <!-- Task List 2 -->
        <ListView
            android:id="@+id/task_list3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="73dp"
            android:textSize="24dp" />

    </LinearLayout>


</LinearLayout>
